doctype html
html
    head(prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# website: http://ogp.me/ns/website#")
        meta(name="author", content="UrYouTube.com")
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content="Ultimate YouTube Video Repeater and Downloader. Listen to any Video repeatedly and Download with single click. Maintain your custom YouTube..!")
        meta(name="keywords", content="uryoutube, youtube, video, download, listen in loop, songs, music, repeat, listen repeatedly, loop, listen, mp4,mp3,audio,entertainment,1080p,hd,hd video,videos,single click")
        if(og != null)
            title #{og.title}
            meta(property="fb:app_id", content="972874476155930")
            meta(property="og:type", content="website")
            meta(property="og:title", content= og.title)
            meta(property="og:url", content= og.url)
            meta(property="og:image", content= og.image)
            meta(property="og:description", content= og.description)
            meta(property="og:site_name", content="UrYouTube")
        else
            title= "Error | UrYouTube - It's your own Youtube.!"
        link(rel="icon", href="/images/favicon.ico", type="image/x-icon")
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        script(src='/javascripts/jquery.js' type='text/javascript')
        script(src='//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js' type='text/javascript')
        script(src='/javascripts/moment.js' type='text/javascript')
        script(src='/javascripts/bootstrap.min.js' type='text/javascript')
        script(src='/javascripts/custom.js' type='text/javascript')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1", crossorigin="anonymous")
        link(href='//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css', rel="stylesheet")
        script.
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject'] = r;i[r]=i[r]||function(){(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');ga('create', 'UA-84794899-1', 'auto');ga('send', 'pageview');

    block vars
    body
        .container-fluid
            nav.navbar.navbar-fixed-top.navbar-default
                .container
                    .navbar-header.pull-left
                        a.navbar-brand(href='/')
                            img.img-responsive(src='/images/SiteLogo.png', alt="UrYouTube")
                        if(showSearch)
                            form.visible-md.visible-lg.visible-sm.navbar-form.navbar-left#post-form(method="get", action="/search")
                                .input-group#search-group
                                    input.form-control#uryoutube(value='#{q || ""}' type="text", name="q" required="true" title="Search YouTube..", placeholder="Search YouTube..")
                                    span.input-group-btn
                                        button.btn.btn-info#submit-button(type="submit")
                                            i.fa.fa-search
                    .navbar-header.pull-right
                        ul.nav.navbar-nav.pull-left
                            li
                                a
                                    .fb-like(data-href="https://www.facebook.com/Ur-Youtube-846213445515701/", data-layout="button", data-action="like", data-size="large", data-show-faces="true", data-share="false")
            .placeholder-50
            form.visible-xs#post-form(method="get", action="/search", style="margin-top: 20px;")
                .input-group(style="width: 95%;")
                    input.form-control#uryoutube-mobile(value='#{q || ""}' type="text", name="q" required="true" title="Search YouTube..", placeholder="Search YouTube..")
                    span.input-group-btn
                        button.btn.btn-info#submit-button(type="submit")
                            i.fa.fa-search
            block content
        .footer
            .container-fluid
                span.nav.nav-pills
                    li(role="presentation")
                        a.text-muted(href="/about") About
                    li(role="presentation")
                        a.text-muted(href="/help") Help
                span.nav.nav-pills.pull-right
                    li(role="presentation")
                        a.text-muted(href="/terms") Terms
                    li(role="presentation")
                        a.text-muted(href="/privacy") Privacy
            #fb-root
            script.
